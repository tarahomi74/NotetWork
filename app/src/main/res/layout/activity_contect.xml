<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahand.notetwork.ContectActivity">

    <FrameLayout
        android:background="@drawable/login_im"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <EditText
        android:id="@+id/name"
        android:inputType="text"
        android:paddingRight="10dp"
        android:textColorHint="@color/black"
        android:layout_centerInParent="true"
        android:hint="name and family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/phon"
        android:inputType="phone"
        android:layout_below="@+id/name"
        android:paddingRight="10dp"
        android:textColorHint="@color/black"
        android:layout_centerInParent="true"
        android:hint="phon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/phon"
        android:paddingRight="10dp"
        android:textColorHint="@color/black"
        android:layout_centerInParent="true"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/new_pas"
        android:inputType="textPassword"
        android:layout_below="@+id/email"
        android:paddingRight="10dp"
        android:textColorHint="@color/black"
        android:layout_centerInParent="true"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/new_pas2"
        android:inputType="textPassword"
        android:layout_below="@+id/new_pas"
        android:paddingRight="10dp"
        android:textColorHint="@color/black"
        android:layout_centerInParent="true"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="5dp"
        android:text="create accont"
        android:layout_below="@+id/new_pas2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
